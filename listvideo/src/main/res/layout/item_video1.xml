<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemView"
    >
    <com.jiang.list.wight.VideoListPlayView
        android:id="@id/item_exo_player_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/white"
        app:controller_layout_id="@layout/simple_exo_playback_control_view"
        app:fastforward_increment="0"
        app:paddingEnd="0dp"
        app:paddingStart="0dp"
        app:player_layout_id="@layout/simple_exo_view"
        app:resize_mode="fit"
        app:rewind_increment="0"
        app:show_timeout="3000"
        app:surface_type="texture_view"
        app:hide_on_touch="true"
        app:use_artwork="true"

        />
    <ImageView
        android:id="@+id/player_view_play"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        />
</RelativeLayout>